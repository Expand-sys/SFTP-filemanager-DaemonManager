extends layout

block content
  .container
    .row 
      .col-sm
      .col
        .card.shadow-lg
          h1.text-black Login
          hr
          p
          form(method='POST', action='/init')
            #form-group
              label host:
              input.form-control(name='host', type='text')
              br
            #form-group
              label port:
              input.form-control(name='port', type='text')
              br
            #form-group
              label Username:
              input.form-control(name='username', type='text')
              br
            #form-group
              label Password:
              input.form-control(name='password', type='password')
              br


            input.btn.btn-primary(type='submit', value='Submit')
      .col-sm
            
